<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_pay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.acer.androidproject01.PayActivity">


    <TextView
            android:id="@+id/RMB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:textSize="40dp"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="150dp"
            android:gravity="center_horizontal"
            android:text="¥" />

    <TextView
            android:id="@+id/payname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="90dp"
            android:gravity="center_horizontal"
            android:text="qidian创始人" />

    <TextView
            android:id="@+id/payphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="125dp"
            android:gravity="center_horizontal"
            android:text="153****1314" />

    <EditText
            android:id="@+id/paymoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="60dp"
            android:layout_marginTop="150dp"




            android:ems="100"
            android:inputType="number" />

    <Button
            android:id="@+id/pay"
            android:text="刷脸支付"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="100dp"
            android:layout_marginTop="200dp"
            android:onClick="pay"
            android:gravity="center_horizontal"

            android:layout_alignRight="@+id/imageView01" android:layout_alignEnd="@+id/imageView01"/>
    <ImageView
            android:id="@+id/imageView01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="100dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="380dp"
            android:layout_marginRight="100dp"
            android:gravity="center_horizontal"
            android:src="@drawable/image_3"
            android:theme="@android:style/Theme.Translucent"
           />

</RelativeLayout>
